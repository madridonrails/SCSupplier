<%= form_tag providers_url, :method => :get %>
  <table>
    <tr>
      <td><%= t 'general.name' %></td>
      <td><%= text_field_tag 'filter[name]', (@filter[:name] rescue '') %></td>
    </tr>
    <tr>
      <td><%= t 'providers.contact' %></td>
      <td><%= text_field_tag 'filter[contact]', (@filter[:contact] rescue '') %></td>
    </tr>
  </table>
  <%= submit_tag t('general.filter'), {:class => "button"} %>
</form>
